               author="Miron">
        <renameColumn tableName="roles"
                      oldColumnName="name"
                      newColumnName="role_name"/>

        <rollback>
            <renameColumn tableName="roles"
                          oldColumnName="role_name"
                          newColumnName="name"/>
        </rollback>
    </changeSet>

</databaseChangeLog>